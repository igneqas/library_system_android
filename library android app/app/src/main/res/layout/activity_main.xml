<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityControllers.MainActivity">
    <ListView
            android:layout_width="412dp"
            android:layout_height="632dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/booksList"
            android:choiceMode="multipleChoice" android:layout_marginTop="100dp"/>
    <Button
            android:text="@string/reservation_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirmB"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.949" android:onClick="openConfirmation"/>

    <TextView
            android:id="@+id/emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No results"
            android:textSize="20sp"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>